<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PetInsulinLogs.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PetInsulinLogs"
    xmlns:views="clr-namespace:PetInsulinLogs.Views"
    Title="PetInsulinLogs">

    <!-- Main Dashboard as primary content -->
    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="dashboard" />

    <!-- Other pages as navigable content -->
    <ShellContent
        Title="Pets"
        ContentTemplate="{DataTemplate views:PetListPage}"
        Route="pets" />
    <ShellContent
        Title="Log Shot"
        ContentTemplate="{DataTemplate views:LogShotPage}"
        Route="logshot" />
    <ShellContent
        Title="History"
        ContentTemplate="{DataTemplate views:HistoryPage}"
        Route="history" />
    <ShellContent
        Title="Vacation"
        ContentTemplate="{DataTemplate views:VacationModePage}"
        Route="vacation" />
    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate views:OnboardingPage}"
        Route="onboarding" />

</Shell>
